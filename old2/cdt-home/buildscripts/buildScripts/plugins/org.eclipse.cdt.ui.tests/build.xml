<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.cdt.ui.tests" default="build.jars" basedir=".">

	<property name="bootclasspath" value=""/>
	<property name="ws" value=""/>
	<property name="os" value=""/>
	<property name="arch" value=""/>

	<target name="init" depends="properties">
		<property name="plugin" value="org.eclipse.cdt.ui.tests"/>
		<property name="version.suffix" value="_1.0.0"/>
		<property name="full.name" value="${plugin}${version.suffix}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
		<property name="build.result.folder" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>
	</target>

	<target name="build.update.jar" depends="init">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip zipfile="${plugin.destination}/${full.name}.jar" basedir="${temp.folder}/${full.name}" filesonly="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/${full.name}"/>
		<copy file="${build.result.folder}/cdttests.jar" todir="${destination.temp.folder}/${full.name}"/>
	</target>

	<target name="cdttests.jar" depends="init" unless="cdttests.jar">
		<property name="destdir" value="${temp.folder}/cdttests.jar.bin"/>
		<delete dir="${temp.folder}/cdttests.jar.bin"/>
		<mkdir dir="${temp.folder}/cdttests.jar.bin"/>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/cdttests.jar.bin" failonerror="false" verbose="true" debug="on" includeAntRuntime="no" bootclasspath="${bootclasspath}" classpath="../org.eclipse.core.runtime/runtime.jar;../org.eclipse.ui.${ws}/workbench.jar;../org.eclipse.core.resources/bin;../org.eclipse.swt/bin;../org.eclipse.ui.${ws}/workbench{ws}.jar;../org.eclipse.cdt.core.{os}/cdtcore.jar;../org.apache.xerces/xercesImpl.jar;../org.eclipse.update.core.${os}/updatecore.jar;../org.eclipse.ui/workbench.jar;../org.eclipse.swt/ws/${ws}/swt.jar;../org.eclipse.core.runtime/bin;../org.apache.xerces/bin;../org.eclipse.cdt.core/cdtcore.jar;../org.eclipse.ui/bin;../org.eclipse.core.resources.${os}/resources.jar;../org.junit/junit.jar;../org.eclipse.update.core/updatecore.jar;../org.eclipse.core.boot/bin;../org.eclipse.cdt.ui/bin;../org.eclipse.core.resources/resources.jar;../org.eclipse.update.core/bin;../org.eclipse.cdt.core/bin;../org.eclipse.cdt.core.${os}/cdt_${os}.jar;../org.eclipse.cdt.ui/cdtui.jar;../org.eclipse.core.boot/boot.jar;../org.eclipse.swt.${ws}/ws/${ws}/swt.jar;../org.junit/bin;../org.apache.xerces/xmlParserAPIs.jar">
			<src path="src/"/>
			<src path="ui/"/>
			<src path="core/"/>
			<src path="model/"/>
		</javac>
		<!-- copy necessary resources -->
		<copy todir="${temp.folder}/cdttests.jar.bin">
			<fileset dir="src/" excludes="**/*.java"/>
			<fileset dir="ui/" excludes="**/*.java"/>
			<fileset dir="core/" excludes="**/*.java"/>
			<fileset dir="model/" excludes="**/*.java"/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar jarfile="${build.result.folder}/cdttests.jar" basedir="${temp.folder}/cdttests.jar.bin"/>
		<delete dir="${temp.folder}/cdttests.jar.bin"/>
	</target>

	<target name="cdttestssrc.zip" depends="init" unless="cdttestssrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip zipfile="${build.result.folder}/cdttestssrc.zip" filesonly="false">
			<fileset dir="src/" includes="**/*.java"/>
			<fileset dir="ui/" includes="**/*.java"/>
			<fileset dir="core/" includes="**/*.java"/>
			<fileset dir="model/" includes="**/*.java"/>
		</zip>
	</target>

	<target name="build.jars" depends="init">
		<available property="cdttests.jar" file="${build.result.folder}/cdttests.jar"/>
		<antcall target="cdttests.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="cdttestssrc.zip" file="${build.result.folder}/cdttestssrc.zip"/>
		<antcall target="cdttestssrc.zip"/>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/${full.name}"/>
		<copy file="${build.result.folder}/cdttestssrc.zip" todir="${destination.temp.folder}/${full.name}"/>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/${full.name}"/>
		<copy file="${temp.folder}/cdttests.jar.bin.log" todir="${destination.temp.folder}/${full.name}"/>
	</target>

	<target name="clean" depends="init">
		<delete file="${build.result.folder}/cdttests.jar"/>
		<delete file="${build.result.folder}/cdttestssrc.zip"/>
		<delete file="${plugin.destination}/${full.name}.jar"/>
		<delete file="${plugin.destination}/${full.name}.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running">
		<eclipse.refreshLocal resource="${plugin}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"/>
		</delete>
		<zip zipfile="${plugin.destination}/${full.name}.zip" basedir="${temp.folder}" filesonly="true"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
